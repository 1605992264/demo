    <select id="getPrevHiTask" resultType="HiTaskDO">
        SELECT
            <include refid="hiTaskColumns"></include>
        FROM
            flow_hi_task a
        WHERE
            a.flag = '0'
            and a.order_id = #{value}
        ORDER BY sort DESC
        LIMIT 1
    </select>

