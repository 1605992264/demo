<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.txdata.flow.dao.HiTaskDao">

    <sql id="hiTaskColumns">
    	a.`id` AS "id",
    	a.`order_id` AS "orderId",
    	a.`task_name` AS "taskName",
    	a.`display_name` AS "displayName",
    	a.`node_id` AS "nodeId",
    	a.`state` AS "state",
    	a.`flag` AS "flag",
    	a.`sort` AS "sort"
    </sql>
    
    <sql id="leftJion">
    </sql>
    
	<select id="get" resultType="HiTaskDO">
		SELECT  
		<include refid="hiTaskColumns"/>
		FROM flow_hi_task a
		<include refid="leftJion"/>
		WHERE a.id = #{value}
	</select>

	<select id="list" resultType="HiTaskDO">
		SELECT 
        <include refid="hiTaskColumns"/>
        FROM flow_hi_task a
        <include refid="leftJion"/>
        <where> 
           <if test="entity.id != null and entity.id != ''"> 
		  		AND a.id = #{entity.id}
		   </if>		
           <if test="entity.orderId != null and entity.orderId != ''"> 
		  		AND a.order_id = #{entity.orderId}
		   </if>		
           <if test="entity.taskName != null and entity.taskName != ''"> 
		  		AND a.task_name = #{entity.taskName}
		   </if>		
           <if test="entity.displayName != null and entity.displayName != ''"> 
		  		AND a.display_name = #{entity.displayName}
		   </if>		
           <if test="entity.nodeId != null and entity.nodeId != ''"> 
		  		AND a.node_id = #{entity.nodeId}
		   </if>		
           <if test="entity.state != null and entity.state != ''"> 
		  		AND a.state = #{entity.state}
		   </if>
           <if test="entity.flag != null and entity.flag != ''">
                AND a.flag = #{entity.flag}
           </if>
           <if test="entity.sort != null and entity.sort != ''">
                AND a.sort = #{entity.sort}
           </if>

		</where>
	</select>
	
	<insert id="insert">
		INSERT INTO flow_hi_task
		<trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">`id`,</if>
            <if test="orderId != null">`order_id`,</if>
            <if test="taskName != null">`task_name`,</if>
			<if test="displayName != null">`display_name`,</if>
            <if test="nodeId != null">`node_id`,</if>
			<if test="state != null">`state`,</if>
            <if test="flag != null">`flag`,</if>
            <if test="sort != null">`sort`,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id != null">#{id},</if>
			<if test="orderId != null">#{orderId},</if>
			<if test="taskName != null">#{taskName},</if>
			<if test="displayName != null">#{displayName},</if>
			<if test="nodeId != null">#{nodeId},</if>
			<if test="state != null">#{state},</if>
            <if test="flag != null">#{flag},</if>
            <if test="sort != null">#{sort},</if>
		</trim>
	</insert>
	 
	<update id="update">
		UPDATE flow_hi_task 
		<set>
            <if test="orderId != null">`order_id` = #{orderId},</if>
            <if test="taskName != null">`task_name` = #{taskName},</if>
            <if test="displayName != null">`display_name` = #{displayName},</if>
            <if test="nodeId != null">`node_id` = #{nodeId},</if>
            <if test="state != null">`state` = #{state}</if>
            <if test="flag != null">`flag` = #{flag},</if>
            <if test="sort != null">`sort` = #{sort}</if>
		</set>
		WHERE id = #{id} 
	</update>
	
	<update id="remove">
		UPDATE flow_hi_task 
		SET `del_flag` = '1'
		WHERE id = #{value}
	</update>
	
	<update id="batchRemove">
		UPDATE flow_hi_task 
		SET `del_flag` = '1'
		WHERE id IN 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>
	
	<delete id="delete">
		DELETE FROM flow_hi_task 
		WHERE id = #{value}
	</delete>
	
	<delete id="batchDelete">
		DELETE FROM flow_hi_task 
		WHERE id IN 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<insert id="batchInsert">
		INSERT INTO flow_hi_task
		(
			`id`,
			`order_id`,
			`task_name`,
			`display_name`,
			`node_id`,
			`state`
		)
		VALUES
		<foreach item="hiTask" collection="list" separator=",">
		(
			#{hiTask.id},
			#{hiTask.orderId},
			#{hiTask.taskName},
			#{hiTask.displayName},
			#{hiTask.nodeId},
			#{hiTask.state}
		)
		</foreach>
	</insert>
	 
	<update id="batchUpdate">
		<foreach item="hiTask" collection="list" separator=";">
			UPDATE flow_hi_task 
			<set>
				<if test="hiTask.orderId != null">`order_id` = #{hiTask.orderId},</if>
				<if test="hiTask.taskName != null">`task_name` = #{hiTask.taskName},</if>
				<if test="hiTask.displayName != null">`display_name` = #{hiTask.displayName},</if>
				<if test="hiTask.nodeId != null">`node_id` = #{hiTask.nodeId},</if>
				<if test="hiTask.state != null">`state` = #{hiTask.state}</if>
			</set>
			WHERE id = #{hiTask.id} 
		</foreach>
	</update>
	
	<update id="updateByWhere">
