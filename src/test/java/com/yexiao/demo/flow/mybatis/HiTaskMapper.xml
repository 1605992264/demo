    <select id="getUserIdByWhere" resultType="string">
        SELECT
            DISTINCT( b.create_by )
        FROM
            flow_hi_task a
            JOIN flow_hi_actor b ON a.id = b.task_id
        <where>
            a.flag = '0'
            AND b.flag = '0'
            <if test="where.id != null and where.id != ''">
                AND id = #{where.id}
            </if>
            <if test="where.orderId != null and where.orderId != ''">
                AND order_id = #{where.orderId}
            </if>
            <if test="where.taskName != null and where.taskName != ''">
